<div>
    <form method="post">
        <div class="card container">
            <div class="card-header bg-dark row d-flex align-items-center">
                <div class="col-12 col-md-6 text-white">
                    <h2>Shopping Cart</h2>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back To Shopping</a>
                </div>
            </div>
            <div class="card-body row container">
                <div class="container rounded">
                    <div class="row">
                        <div class="col-8 col-md-6 border-bottom">
                            <div class="row">
                                <div class="row">
                                    <img src="" />
                                    <h4>Title</h4>
                                    <p>Author</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 border-bottom">
                            <div class="row">
                                <div class="col-3">
                                    <p style="margin-top: 1rem">Price X Count</p>
                                </div>
                                <div class="col-3 d-flex align-items-center">
                                    <a class="btn btn-dark" style="width: 100%">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>
                                </div>
                                <div class="col-3 d-flex align-items-center">
                                    <a class="btn btn-warning" style="width: 100%">
                                        <i class="bi bi-dash-lg"></i>
                                    </a>
                                </div>
                                <div class="col-3 d-flex align-items-center">
                                    <a class="btn btn-danger" style="width: 100%">
                                        <i class="bi bi-trash3"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 mt-3">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between bg-light text-dark">
                                    <span class="text-info">Total (USD)</span>
                                    <strong class="text-info">$$$</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-6 pb-1">
                        <button class="btn btn-success form-control" style="height: 50px" value="Add to Cart" type="submit">Summary</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
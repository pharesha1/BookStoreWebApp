@using BookStoreWebApp.Models.ViewModels;

@model ShoppingCart

<form method="post">
    <input asp-for="ProductId" hidden/>
    <div class="card container m-3">
        <div class="card-header bg-primary row">
            <div class="col-12 col-md-6">
                <h2>@Model.Product.Title</h2>
                <p>by @Model.Product.Author</p>
            </div>
            <div class="col-12 col-md-6 text-end">
                <span class="badge bg-info">@Model.Product.Category.Name</span>
                <span class="badge bg-warning">@Model.Product.CoverType.Name</span>
            </div>
        </div>
        <div class="card-body row container m-3">
            <div class="container rounded">
                <div class="row">
                    <div class="col-8 col-md-6">
                        <div class="row">
                            <h5>ISBN: @Model.Product.ISBN</h5>
                        </div>
                        <div class="row">
                            <h5>List Price: <s class="text-danger">@Model.Product.ListPrice$</s></h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="col-2 border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="col-2 border-bottom">
                                <div>1-49</div>
                            </div>
                            <div class="col-2 border-bottom">
                                <div>50-99</div>
                            </div>
                            <div class="col-2 border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="col-2">
                                <div>Price:</div>
                            </div>
                            <div class="col-2 text-danger">
                                <div>@Model.Product.Price$</div>
                            </div>
                            <div class="col-2 text-danger">
                                <div>@Model.Product.Price50$</div>
                            </div>
                            <div class="col-2 text-danger">
                                <div>@Model.Product.Price100$</div>
                            </div>
                        </div>
                        <div class="row p-2">
                            <h5>Description: @Model.Product.Description</h5>
                        </div>
                        <div class="row p-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10"><input asp-for="Count" class="form-control" /></div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageURL" class="rounded"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary form-control" style="height: 50px">Back To List</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button class="btn btn-success form-control" style="height: 50px" value="Add to Cart" type="submit">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
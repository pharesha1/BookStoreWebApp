@model IEnumerable<Product>

<div class="container" style="text-align: center">
   <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-3 p-0" style="text-align: left">
                <div class="card p-0">
                    <div class="row">
                        <img src="@product.ImageURL" class="img-fluid card-img-top" style="height: 450px; object-fit: cover;">
                    </div>
                    <div class="row card-body border-bottom">
                        <h4 class="card-title">@product.Title</h4>
                        <p>Price: @product.Price.ToString("c")</p>
                        <p>By: @product.Author</p>
                    </div>
                    <div class="row col-8 offset-2 my-3 bg-danger">
                        <a asp-action="Details" class="btn btn-primary px-0" asp-route-productId="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        }
   </div>
</div>
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div>
    <div>
        <h2>Categories</h2>
        <a asp-controller="Category" asp-action="Create">Create new category</a>
        @if(TempData["success"] != null)
        {
            <h2>@TempData["success"]</h2>
        }
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th>Creation Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>@obj.CreationDate</td>
                        <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a></td>
                        <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


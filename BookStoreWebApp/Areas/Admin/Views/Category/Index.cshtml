@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div>
    <div class="row my-2">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary offset-8" asp-controller="Category" asp-action="Create">Create new Category</a>
        </div>
        @if(TempData["success"] != null)
        {
            <h2>@TempData["success"]</h2>
        }
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Display Order</th>
                    <th>Creation Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td>@obj.CreationDate</td>
                        <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a></td>
                        <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

